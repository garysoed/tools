{
  "extends": "devbase/ts",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2015"
    ],
    "outDir": "out",
    "paths": {
      "rxjs": ["node_modules/rxjs"],
      "rxjs/*": ["node_modules/rxjs/*"],
    },
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.ts",
    "export/*.ts",
    "docassets/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
